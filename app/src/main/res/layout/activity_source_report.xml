<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_source_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.two_six_mafia.root.waterapp.Controller.SourceReportActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:id="@+id/autoTime" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_below="@+id/autoTime"
        android:layout_alignStart="@+id/autoTime"
        android:layout_marginTop="44dp"
        android:id="@+id/autoDate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:ems="10"
        android:layout_below="@+id/autoDate"
        android:layout_alignEnd="@+id/autoDate"
        android:layout_marginTop="39dp"
        android:id="@+id/userName"
        android:inputType="textPersonName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Source Location"
        android:ems="10"
        android:layout_marginTop="19dp"
        android:id="@+id/sourceLocation"
        android:layout_below="@+id/userName"
        android:layout_alignStart="@+id/userName" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sourceLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/waterType" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/waterType"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:id="@+id/waterCondition" />
</RelativeLayout>
