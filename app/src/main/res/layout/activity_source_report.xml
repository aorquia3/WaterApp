<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_source_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.two_six_mafia.root.waterapp.Controller.SourceReportActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:id="@+id/autoTime" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_below="@+id/autoTime"
        android:layout_alignStart="@+id/autoTime"
        android:layout_marginTop="44dp"
        android:id="@+id/autoDate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Reporter"
        android:ems="10"
        android:layout_below="@+id/autoDate"
        android:layout_alignEnd="@+id/autoDate"
        android:layout_marginTop="39dp"
        android:id="@+id/userName"
        android:inputType="textPersonName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Location (LATLONG)"
        android:ems="10"
        android:layout_marginTop="19dp"
        android:id="@+id/sourceLocation"
        android:layout_below="@+id/userName"
        android:layout_alignStart="@+id/userName" />

    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/autoTime"
        android:layout_marginTop="18dp"
        android:id="@+id/time" />

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autoTime"
        android:layout_alignStart="@+id/autoDate"
        android:layout_marginTop="28dp"
        android:id="@+id/date" />

    <TextView
        android:text="Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sourceLocation"
        android:layout_alignStart="@+id/sourceLocation"
        android:id="@+id/type" />

    <TextView
        android:text="Condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Condition"
        android:layout_below="@+id/waterType"
        android:layout_alignStart="@+id/type"
        android:layout_marginTop="18dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/waterCondition"
        android:layout_below="@+id/Condition"
        android:layout_alignStart="@+id/waterType" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/waterType"
        android:layout_below="@+id/type"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
