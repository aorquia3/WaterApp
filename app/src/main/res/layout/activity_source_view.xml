<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_source_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.two_six_mafia.root.waterapp.Controller.SourceViewActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewType"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/viewCondition"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/viewType"
        android:layout_alignStart="@+id/viewType" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/viewDate"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/viewCondition"
        android:layout_alignStart="@+id/viewCondition" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/viewTime"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/viewDate"
        android:layout_alignStart="@+id/viewDate" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/viewReporter"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/viewTime"
        android:layout_alignStart="@+id/viewTime" />
</RelativeLayout>
